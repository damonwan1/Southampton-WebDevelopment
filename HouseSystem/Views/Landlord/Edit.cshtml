             @if (Model.Images.Count == 0)
                {
                        <label>No Image Found</label>
                }
               else
                {
                        foreach (HouseSystem.Models.Image i in Model.Images)
                        {
                            if (i.ImageData != null)
                            {
                                <img src="data:@i.ImageMimeType;base64, @Convert.ToBase64String(i.ImageData)" style="width:280px;height:350px;" />
                                <label>@i.Description</label>
                                <a href="/Landlord/DeleteImage/@i.ImageID">Delete</a><br>
                            }
                        }
                 }

                </div>
            </div>

